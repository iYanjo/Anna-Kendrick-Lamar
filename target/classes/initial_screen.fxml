<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints prefWidth="600.0" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints prefHeight="300.0" />
      <RowConstraints />
    </rowConstraints>
    <children>
      <HBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
          <padding>
              <Insets bottom="20" left="20" right="20" top="20" />
          </padding>
         <children>
                <Label text="Enter your name: " HBox.hgrow="NEVER" />
            <TextField id="nameTextField" fx:id="nameTextField" promptText="Use the same name if you've done this before." HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
                <!--
                <JFXButton fx:id="firstTimeButton" buttonType="RAISED" mnemonicParsing="false" text="First time (this creates you a spreadsheet)" />
                <JFXButton fx:id="nthTimeButton" buttonType="RAISED" layoutX="300.0" mnemonicParsing="false" text="I've done this before (supply the same spreadsheet)" />
                -->
                <Button fx:id="firstTimeButton" alignment="CENTER" mnemonicParsing="false" text="First time (This creates you a spreadsheet)">
               <VBox.margin>
                  <Insets bottom="25.0" top="25.0" />
               </VBox.margin></Button>
                <Button fx:id="nthTimeButton" layoutX="300.0" mnemonicParsing="false" text="I've done this before (Supply the same spreadsheet)">
               <VBox.margin>
                  <Insets bottom="25.0" top="25.0" />
               </VBox.margin></Button>

            </children>
        </VBox>
    </children>
</GridPane>
